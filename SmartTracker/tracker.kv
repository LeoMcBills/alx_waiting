StartScreen:

<StartScreen@GridLayout>:
    cols: 1

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/test.jpg'
    Label:
        text: "Smart vTracker"

    Button:
        text: "Register"
        size: 200, 50
        background_color: 0, 1, 0.5, 1
        background_normal: 'images/test.jpg'
    
    Label:
        text: "Don't have an account? Register."

<LoginScreen>:
    Label:
        text: "Login Screen"

<RegisterScreen>:
    Label:
        text: "Register Screen"

<MainScreen>:
    Label:
        text: "Main Screen"

<ScanScreen>:
    Label:
        text: "Scan Screen"

<RegisterPatientScreen>:
    Label:
        text: "Register Patient Screen"

<PatientScreen>:
    Label:
        text: "Patient Screen"

<TrackerApp>:
    ScreenManager:
        id: screen_manager

        StartScreen:
            name: "start"

        LoginScreen:
            name: "login"

        RegisterScreen:
            name: "register"

        MainScreen:
            name: "main"

        ScanScreen:
            name: "scan"

        RegisterPatientScreen:
            name: "register_patient"

        PatientScreen:
            name: "patient"
