    Button:
        text: "Register"
        on_release: app.root.current = "register"

<LoginScreen>:
    Label:
        text: "Login Screen"

<RegisterScreen>:
    Label:
        text: "Register Screen"

<MainScreen>:
    Label:
        text: "Main Screen"

<ScanScreen>:
    Label:
        text: "Scan Screen"

<RegisterPatientScreen>:
    Label:
        text: "Register Patient Screen"

<PatientScreen>:
    Label:
        text: "Patient Screen"

