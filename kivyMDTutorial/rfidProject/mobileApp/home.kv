MDScreen:
    name: "home"

    MDFloatLayout:
        md_bg_color: app.get_color('C4C4C4')

# add MD2Card with white color and no shadow

        MDLabel:
            text: "Welcome!"
            font_size: "30sp"
            pos_hint: {"center_x": .8, "center_y": .82}
            color: rgba(68, 78, 132, 255)
            theme_text_color: "Custom"
            text_color: 0, 0, 0, .8  # Black color
            bold: True
            
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: .45, .5
            size: "280dp", "180dp"
            pos_hint: {"center_x": .26, "center_y": .5}
            elevation: 0
            md_bg_color: app.theme_cls.bg_light
            MDFloatLayout:
                size_hint: .45, .5
                pos_hint: {"center_x": .5, "center_y": .72}

                Image:
                    source: "images/uBroadcast1.png"
                    size_hint: None, None
                    pos_hint: {"center_x": .5, "center_y": .55}

                MDRaisedButton:
                    text: "Scan"
                    size_hint: .44, .08
                    pos_hint: {"center_x": .5, "center_y": .1}
                    md_bg_color: app.get_color('06560A')
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "scan"

       
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: .45, .5
            size: "280dp", "180dp"
            pos_hint: {"center_x": .74, "center_y": .5}
            elevation: 0
            md_bg_color: app.theme_cls.bg_light
            MDFloatLayout:
                size_hint: .45, .05
                pos_hint: {"center_x": .5, "center_y": .72}

                Image:
                    source: "images/register.png"
                    size_hint: None, None
                    pos_hint: {"center_x": .5, "center_y": .52}

                MDRaisedButton:
                    text: "Register"
                    size_hint: None, .08
                    pos_hint: {"center_x": .5, "center_y": .1}
                    md_bg_color: app.get_color('06560A')
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "register"

        MDLabel:
            text: "Smart vTracker"
            font_size: "15sp"
            pos_hint: {"center_x": .85, "center_y": .15}
            color: rgba(68, 78, 132, 255)