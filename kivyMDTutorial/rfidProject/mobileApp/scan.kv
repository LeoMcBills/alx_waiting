# scanning page
<ScanPage>:

    MDFloatLayout:
        md_bg_color: app.get_color('181818')

        MDTextButton:
            text: "X"
            color: "lightblue"
            font_size: "26sp"
            pos_hint: {"center_x": .08, "center_y": .95}
            on_release:
                root.manager.transition.direction = "up"
                root.manager.current = "home"

        Image:
            source: "rfidS.png"
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.59}

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(26), dp(26)
            pos_hint: {"center_x": .5, "center_y": .21}
            active: True
            # change thickness of spinner
            thickness: dp(5)
            palette:
                [0.28627450980392155, 0.8431372549019608, 0.596078431372549, 1],                [0.3568627450980392, 0.3215686274509804, 0.8666666666666667, 1],                [0.8862745098039215, 0.36470588235294116, 0.592156862745098, 1],                [0.8784313725490196, 0.9058823529411765, 0.40784313725490196, 1],               [0.8862745098039215, 0.36470588235294116, 0.592156862745098, 1],                [0.3568627450980392, 0.3215686274509804, 0.8666666666666667, 1],                [0.28627450980392155, 0.8431372549019608, 0.596078431372549, 1],                [0.8784313725490196, 0.9058823529411765, 0.40784313725490196, 1],

        MDLabel:
            text: "Scanning..."
            font_size: "18sp"
            pos_hint: {"center_x": .87, "center_y": .164}
            color: "lightblue"