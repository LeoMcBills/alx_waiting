MDScreen:
    name: "register"

    MDFloatLayout:
        md_bg_color: app.get_color('C4C4C4')

        MDTextButton:
            text: "Scan"
            font_size: "16sp"
            pos_hint: {"center_x": .88, "center_y": .96}
            color: app.get_color('06560A')
            bold: True
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "scan"

        # MDTextButton:
        #     text: "Home"
        #     font_size: "16sp"
        #     pos_hint: {"center_x": .1, "center_y": .96}
        #     color: app.get_color('06560A')
        #     bold: True
        #     on_release:
        #         root.manager.transition.direction = "up"
        #         root.manager.current = "home"

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_x": .08, "center_y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "home"
        
        MDTextField:
            hint_text: "NIN"
            mode: "round"
            max_text_length: 20
            helper_text: "minimum 20 characters"
            size_hint: .85, None
            pos_hint: {"center_x": .5, "center_y": .75}
            height: self.minimum_height
            multiline: False
            password: False
            cursor_color: 57/255, 66/255, 143/255, 1
            cursor_width: "2sp"
            foreground_color: 57/255, 66/255, 143/255, 1
            background_color: 0, 0, 0, 0
            padding: 15
            font_size: "18sp"

        MDTextField:
            hint_text: "BATCH NUMBER"
            mode: "round"
            max_text_length: 20
            helper_text: "minimum 20 characters"
            size_hint: .85, None
            pos_hint: {"center_x": .5, "center_y": .62}
            height: self.minimum_height
            multiline: False
            password: False
            cursor_color: 57/255, 66/255, 143/255, 1
            cursor_width: "2sp"
            foreground_color: 57/255, 66/255, 143/255, 1
            background_color: 0, 0, 0, 0
            padding: 15
            font_size: "18sp"

        MDTextField:
            hint_text: "HOSPITAL"
            mode: "round"
            max_text_length: 20
            helper_text: "minimum 20 characters"
            size_hint: .85, None
            pos_hint: {"center_x": .5, "center_y": .50}
            height: self.minimum_height
            multiline: False
            password: False
            cursor_color: 57/255, 66/255, 143/255, 1
            cursor_width: "2sp"
            foreground_color: 57/255, 66/255, 143/255, 1
            background_color: 0, 0, 0, 0
            padding: 15
            font_size: "18sp"

        MDFillRoundFlatButton:
            id: submit_button
            text: "Submit"
            size_hint: .8, .08
            pos_hint: {"center_x": .5, "center_y": .25}
            md_bg_color: app.get_color('06560A') 
            on_release:
                root.manager.transition.direction = "left"